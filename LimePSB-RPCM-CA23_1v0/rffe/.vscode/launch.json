            //"args": ["--lmsrx", "w"],
            //"args": ["--rflb", "0"],
            //"args": ["--rfband", "3"],
            //"args": ["--lmsrx", "w"],
            //"args": ["--paon", "1"],
            //"args": ["--rx1att", "10"],
            //"args": ["--pd", "1"],
            "args": ["--wrdac1"],
