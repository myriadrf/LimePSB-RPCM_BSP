{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p build && shopt -s globstar && gcc -g main.c src/**/*.c -Isrc -o build/pactr -liio -lgpiod"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
